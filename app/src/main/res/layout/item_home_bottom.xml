<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="140dp"
    android:paddingStart="@dimen/margin_4dp"
    android:paddingEnd="@dimen/margin_4dp">
    
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_home_bottom_imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/dog"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="8dp"
        app:riv_border_width="0dp"/>

    <TextView
        android:id="@+id/item_home_bottom_text_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:fontFamily="@font/lato_regular"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="3 East 86th Street, New York, NY, 10028"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_9sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_home_bottom_text_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/book_again"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_12sp"
        android:fontFamily="@font/lato_black"
        android:textAllCaps="true"
        android:layout_marginTop="@dimen/margin_8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_home_bottom_imageView"/>

</androidx.constraintlayout.widget.ConstraintLayout>