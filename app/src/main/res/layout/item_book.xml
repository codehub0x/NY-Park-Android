<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="60dp"
    android:layout_height="72dp"
    android:gravity="center">

    <TextView
        android:id="@+id/item_book_text_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/text_size_9sp"
        android:fontFamily="@font/lato_bold"
        android:layout_marginTop="@dimen/margin_2dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_book_layout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_4dp">

        <TextView
            android:id="@+id/item_book_text_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="$11.95"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/book_item_color"
            android:fontFamily="@font/lato_bold"
            android:textAlignment="center"
            android:gravity="bottom"
            android:paddingStart="@dimen/margin_2dp"
            android:paddingEnd="@dimen/margin_2dp"
            android:paddingBottom="@dimen/margin_4dp"
            android:background="@drawable/book_item_background"/>

        <TextView
            android:id="@+id/item_book_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28"
            android:textColor="@color/colorYellow"
            android:textSize="@dimen/text_size_9sp"
            android:fontFamily="@font/lato_bold"
            android:layout_margin="@dimen/margin_4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>